<section class="main-box">
  <div class="form-box">
    <div class="main-heading">Registration Page</div>
    <form action="/user/create" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label>Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Enter Name"
          required
        />
      </div>
      <div class="form-group">
        <label>Profile Picture</label>
        <input type="file" class="form-control" name="profile_pic" />
      </div>
      <div class="form-group">
        <label>Email</label>
        <input
          type="text"
          class="form-control"
          name="email"
          placeholder="Enter password"
          required
        />
      </div>
      <div class="form-group">
        <label>Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Enter password"
          required
        />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-submit" value="Submit" />
      </div>
      <a href="/user/login" class="change-form">Go To Login</a>
    </form>
  </div>
</section>
