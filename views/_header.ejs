<section class="header">
  <div class="container">
    <div class="header-content">
      <div class="left">
        <div class="logo">
          <img src="/images/logo1.png" />
        </div>
        <div class="search-box">
          <span class="material-symbols-outlined"> search </span>
          <input
            type="text"
            class="form-control"
            placeholder="Search"
            name="search"
            id="search-input"
            value="<%= searchValue ? searchValue : '' %>"
          />
        </div>
      </div>
      <div class="right">
        <div class="menu">
          <ul>
            <li>
              <a href="/"
                ><span class="material-symbols-outlined"> home </span
                ><span class="text">Home</span></a
              >
            </li>
            <li>
              <a href="/user/all_users"
                ><span class="material-symbols-outlined"> group </span
                ><span class="text">Users</span></a
              >
            </li>
            <li>
              <a href="/user/friends"
                ><span class="material-symbols-outlined"> group_add </span
                ><span class="text">My Friends</span></a
              >
            </li>
            <li>
              <a href="#"
                ><span class="material-symbols-outlined"> notifications </span
                ><span class="text">Notifications</span></a
              >
            </li>
            <li class="dropdown-li" id="dropdown-list">
              <a href="#"
                ><span class="profile_pic">
                  <img src="<%= user.avatar %>" alt="profile pic" /> </span
                ><span class="text">ME</span></a
              >
              <div class="dropdown-content">
                <div class="user-details">
                  <div class="left">
                    <img src="<%= user.avatar %>" alt="profile pic" />
                  </div>
                  <div class="right">
                    <h5><%= user.name%></h5>
                  </div>
                </div>
                <div class="view-full-profile">
                  <button class="btn btn-tranaparent">View Profile</button>
                  <a href="/user/logout"
                    ><button class="btn btn-logout">Log Out</button></a
                  >
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
